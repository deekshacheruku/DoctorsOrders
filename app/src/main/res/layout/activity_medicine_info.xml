<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scheduler.medicine_info"
    android:background="@color/backgroundTintSecondary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:id="@+id/name">
        <TextView
            android:id="@+id/medicine_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textSize="@dimen/Header2"
            android:text="Colin Zhou:\nMetformin"/>
        <ImageView
            android:id="@+id/med_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/medName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="60dp"
            android:textSize="@dimen/Normal"
            android:text="Medicine Name: Metformin" />
        <TextView
            android:id="@+id/pillNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:textSize="@dimen/Normal"
            android:text="Dose: 5oz" />
        <TextView
            android:id="@+id/instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:textSize="@dimen/Normal"
            android:text="Instructions: take during breakfast" />
        <TextView
            android:id="@+id/dayFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:textSize="@dimen/Normal"
            android:text="Every 4 days at Breakfast" />
        <TextView
            android:id="@+id/specificTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:textSize="@dimen/Normal"
            android:text="When: Breakfast" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Edit"
                android:layout_marginLeft="30dp"
                android:textSize="@dimen/Checkbox"
                android:id="@+id/edit"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textSize="@dimen/Checkbox"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_weight="10"
                android:id="@+id/back"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>